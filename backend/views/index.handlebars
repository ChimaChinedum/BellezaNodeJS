    <script type="text/javascript">

      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v2.9";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));

      window.twttr = (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0],
          t = window.twttr || {};
        if (d.getElementById(id)) return t;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://platform.twitter.com/widgets.js";
        fjs.parentNode.insertBefore(js, fjs);
        t._e = [];
        t.ready = function(f) {
          t._e.push(f);
        };
        return t;
      }(document, "script", "twitter-wjs"));

      var banners = document.getElementById('banners')
      var favorites = document.getElementById('favorites')

      var bannerWidth = banners.clientWidth
      var bslides = banners.getElementsByClassName('slick-slide')
      for (var i = 0; i < bslides.length; i++) {
        bslides[i].style.width = bannerWidth + "px"
      }

      var btracker = banners.getElementsByClassName('slick-track')[0]
      btracker.style.width = bannerWidth * bslides.length+"px"
      btracker.style.transform = "translate3d(-1060px, 0px, 0px)"

      var reponsive = 5
      if(window.innerWidth > 1012 ){
        responsive = 5
      }else if(window.innerWidth > 828 ){
        responsive = 4
      }else if(window.innerWidth > 600 ){
        responsive = 3
      }else if(window.innerWidth > 400 ){
        responsive = 2
      }else{
        responsive = 1
      }

      var favWidth = favorites.clientWidth/responsive
      var fslides = favorites.getElementsByClassName('slick-slide')
      for (var i = 0; i < fslides.length; i++) {
        fslides[i].style.width = favWidth + "px"
      }
      favorites.getElementsByClassName('slick-track')[0].style.width = favWidth * fslides.length+"px"

    </script>
